<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Historial de Búsquedas</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/styles/styles.css">
</head>
<body style="background-color: #000000; color: #ffffff;">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Historial de Búsquedas</h1>
        <ul class="list-group">
            <% historial.forEach(function(busqueda) { %>
                <li class="list-group-item" style="background-color: #000000; color: #ffffff;">
                    <strong>Tipo:</strong> <%= busqueda.type %> | 
                    <strong>Consulta:</strong> <%= busqueda.query %> | 
                    <strong>Fecha:</strong> <%= new Date(busqueda.date).toLocaleString() %>
                </li>
            <% }) %>
        </ul>
        <div class="text-center mt-4">
            <a href="/index" class="btn btn-primary">Volver a la Búsqueda</a>
        </div>
    </div>
</body>
</html>
